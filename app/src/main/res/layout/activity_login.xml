<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.authentication.Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="130dp"
        android:id="@+id/app_logo"
        android:src="@drawable/stu_logo_png"
        android:contentDescription="@string/student_accesibility_logo" />

    <TextView
        android:layout_below="@+id/app_logo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/foggy"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/stuaccess"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:autofillHints=""
        android:background="@drawable/message_bg"
        android:ems="10"
        android:hint="@string/dalca"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_below="@+id/edt_email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:autofillHints=""
        android:background="@drawable/message_bg"
        android:ems="10"
        android:padding="8dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/edt_password"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/send_msg_bg"
        android:text="@string/login" />

    <TextView
        android:id="@+id/forgot_pswd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="@string/forgot_password"
        android:textColor="@color/foggy"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:layout_below="@id/forgot_pswd"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text="@string/about_us"
        android:background="@drawable/send_msg_bg"/>
</RelativeLayout>