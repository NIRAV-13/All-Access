<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.accomodation.AdvisorAccomodation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Requests for Approval"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:id="@+id/request_approval"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name:"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/request_approval"
        android:id="@+id/accom_stud_name_head"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_approval"
        android:textSize="18dp"
        android:text="Alex Ferguson"
        android:id="@+id/accom_stud_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/accom_stud_name"
        android:text="University:"
        android:textColor="@color/black"
        android:id="@+id/univ_name_head"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accom_stud_name"
        android:id="@+id/univ_name"
        android:textSize="18dp"
        android:text="Dalhousie University"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prog_name_head"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/univ_name_head"
        android:text="Program:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/univ_name"
        android:id="@+id/prog_name"
        android:textSize="18dp"
        android:text="Bachelor of Computer Science"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_name_head"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/prog_name_head"
        android:text="Course:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prog_name"
        android:id="@+id/course_name"
        android:textSize="18dp"
        android:text="CSCI 1005 Intro to Computer Science"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/term_head"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/course_name_head"
        android:text="Term:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name"
        android:id="@+id/stud_term"
        android:textSize="18dp"
        android:text="2nd Term"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_head"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/term_head"
        android:text="Year:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_term"
        android:textSize="18dp"
        android:id="@+id/stud_year"
        android:text="1st Year"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_head"
        android:layout_below="@+id/year_head"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Email:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_year"
        android:id="@+id/stud_email"
        android:textSize="18dp"
        android:text="alexferguson@dal.ca"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_head"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_below="@+id/email_head"
        android:text="Phone:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_email"
        android:textSize="18dp"
        android:id="@+id/stud_phone"
        android:text="1234567890"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doc_head"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/phone_head"
        android:text="Documents:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_phone"
        android:id="@+id/stud_doc"
        android:text="Download"
        android:textColor="@color/download"
        android:textStyle="bold"
        android:autoLink="web"
        android:textSize="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reason_head"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_below="@+id/doc_head"
        android:text="Reason:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_doc"
        android:id="@+id/stud_reason"
        android:textSize="18dp"

        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_reason"
        android:layout_marginTop="30dp"
        android:text="Reject"
        android:background="@color/reject"
        android:id="@+id/adv_reject"
        android:textColor="@color/white"
        android:layout_marginStart="230dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stud_reason"
        android:layout_marginTop="30dp"
        android:text="Accept"
        android:background="@color/accept"
        android:layout_marginStart="105dp"
        android:textColor="@color/white"

        android:id="@+id/adv_accept"
        />

</RelativeLayout>