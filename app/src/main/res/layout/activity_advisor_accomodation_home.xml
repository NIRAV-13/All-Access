<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.accomodationfeature.AdvisorAccomodationHome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accom_head"
        android:text="Accomodation Requests"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/programSpinner"
        android:padding="10dp"
        android:text="Sort by Program"
        android:autofillHints="Sort by Program"
        android:spinnerMode="dropdown"
        android:layout_below="@id/accom_head"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_dropdown_light_frame"/>

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/programSpinner"
        android:layout_centerHorizontal="true"
        android:autofillHints="Sort by Year"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:padding="10dp"
        android:text="Sort by Year" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/termSpinner"
        android:padding="10dp"
        android:text="Sort by Term"
        android:spinnerMode="dropdown"
        android:autofillHints="Sort by Term"
        android:layout_below="@id/yearSpinner"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_dropdown_light_frame"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/termSpinner"
        android:layout_marginTop="40dp" />
    
