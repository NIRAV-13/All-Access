<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/mygridView"-->
<!--        android:numColumns="auto_fit"-->
<!--        android:layout_below="@id/termSpinner"-->
<!--        android:layout_marginTop="20dp"/>-->


</RelativeLayout>