<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotpswdActivity">

    <TextView
        android:id="@+id/textpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Can't Login?"
        android:layout_marginTop="230dp"
        android:textColor="@color/foggy"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textpswd"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Please provide your email."
        android:textColor="@color/foggy"
        android:textSize="16sp"

        />

    <EditText
        android:id="@+id/forgotpswdEmail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:autofillHints=""
        android:background="@drawable/message_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/forgotpswdEmail"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/send_msg_bg"
        android:text="Reset Password" />
</RelativeLayout>