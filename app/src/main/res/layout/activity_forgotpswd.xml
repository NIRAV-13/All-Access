<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotpswdActivity">

    <TextView
        android:id="@+id/textpswd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/foggy"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Hello there I am at password reset screen"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/forgotpswdEmail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:autofillHints=""
        android:background="@drawable/message_bg"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/forgotpswdEmail"
        android:layout_marginTop="80dp"
        android:layout_marginStart="160dp"
        android:textColor="@color/white"
        android:layout_marginEnd="157dp"
        android:text="Reset Password"
        android:background="@drawable/send_msg_bg"/>
</RelativeLayout>